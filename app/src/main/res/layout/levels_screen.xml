<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    android:orientation="vertical"
    android:weightSum="3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/level_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/Button1"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_one_24" />
            <ImageButton
                android:id="@+id/Button3"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_3_24" />
            <ImageButton
                android:id="@+id/Button5"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_5_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/Button2"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_two_24" />
            <ImageButton
                android:id="@+id/Button4"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_4_24"/>
            <ImageButton
                android:id="@+id/Button6"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_looks_6_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



